<?php
/**
 * @file
 * Install, update and uninstall functions for the views_exposedfilters_facets module.
 *
 */

/**
 * Implements hook_install()
 */
function views_exposedfilters_facets_install() {
  db_update('system')
    ->fields(array(
      'weight' => '100'
    ))
    ->condition('name', 'views_exposedfilters_facets')
    ->condition('type', 'module')
    ->execute();
}
